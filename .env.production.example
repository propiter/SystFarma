# =================================
# SIGFARMA - Configuración de Producción
# =================================

# IMPORTANTE: Copiar este archivo como .env y configurar con valores reales
# NO subir el archivo .env al repositorio por seguridad

# =================================
# CONFIGURACIÓN DE BASE DE DATOS
# =================================

# Opción 1: Supabase (Recomendado para producción)
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co
VITE_SUPABASE_ANON_KEY=tu-anon-key-aqui

# Opción 2: PostgreSQL Local/Remoto
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sigfarma
DB_USER=sigfarma_user
DB_PASSWORD=password_super_seguro_cambiar_en_produccion

# =================================
# CONFIGURACIÓN JWT
# =================================
JWT_SECRET=clave-super-secreta-de-al-menos-32-caracteres-cambiar-en-produccion
JWT_EXPIRATION=24h

# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================
PORT=3000
NODE_ENV=production

# =================================
# CONFIGURACIÓN DEL CLIENTE
# =================================
CLIENT_URL=https://tu-dominio.com
VITE_API_URL=https://tu-dominio.com/api

# =================================
# CONFIGURACIÓN DE CORREO (Opcional)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion
SMTP_FROM=noreply@tu-dominio.com

# =================================
# CONFIGURACIÓN DE ARCHIVOS (Opcional)
# =================================
UPLOAD_PATH=/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# =================================
# CONFIGURACIÓN DE CACHE (Opcional)
# =================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =================================
# CONFIGURACIÓN DE LOGS
# =================================
LOG_LEVEL=info
LOG_FILE=./logs/sigfarma.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =================================
# CONFIGURACIÓN DE SEGURIDAD
# =================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# =================================
# CONFIGURACIÓN DE BACKUP
# =================================
BACKUP_PATH=/backups/sigfarma
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =================================
# CONFIGURACIÓN DE MONITOREO
# =================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
SENTRY_DSN=https://tu-sentry-dsn@sentry.io/proyecto

# =================================
# CONFIGURACIÓN ESPECÍFICA DE COLOMBIA
# =================================
TIMEZONE=America/Bogota
CURRENCY=COP
LOCALE=es-CO
TAX_RATE=0.19

# =================================
# CONFIGURACIÓN DE INTEGRACIÓN DIAN (Futuro)
# =================================
DIAN_ENVIRONMENT=production
DIAN_SOFTWARE_ID=tu-software-id
DIAN_SOFTWARE_PIN=tu-software-pin
DIAN_CERTIFICATE_PATH=/certificates/dian.p12
DIAN_CERTIFICATE_PASSWORD=password-certificado

# =================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =================================
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_VAPID_PUBLIC_KEY=tu-vapid-public-key
PUSH_VAPID_PRIVATE_KEY=tu-vapid-private-key
PUSH_VAPID_EMAIL=mailto:admin@tu-dominio.com

# =================================
# CONFIGURACIÓN DE TERCEROS
# =================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
HOTJAR_ID=1234567
CRISP_WEBSITE_ID=tu-crisp-id

# =================================
# CONFIGURACIÓN DE CDN (Opcional)
# =================================
CDN_URL=https://cdn.tu-dominio.com
STATIC_FILES_URL=https://static.tu-dominio.com

# =================================
# CONFIGURACIÓN DE WEBSOCKETS (Futuro)
# =================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=https://tu-dominio.com

# =================================
# CONFIGURACIÓN DE MICROSERVICIOS (Futuro)
# =================================
INVENTORY_SERVICE_URL=http://localhost:3002
BILLING_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004

# =================================
# CONFIGURACIÓN DE DESARROLLO (Solo para desarrollo)
# =================================
# Descomentar solo en entorno de desarrollo
# DEBUG=sigfarma:*
# VERBOSE_LOGGING=true
# MOCK_EXTERNAL_APIS=true